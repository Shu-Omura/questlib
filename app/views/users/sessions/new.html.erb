<section class="row sign_up">
  <div class="col-md-4 col-md-offset-1 wrapper">
    <span>Questlib</span>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'users/shared/error_messages', resource: resource %>
      <%= render 'shared/flash' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'メールアドレス' %>
      <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'パスワード' %>
      <%= f.submit 'ログイン', class: 'submit' %>
    <% end %>

    <p>アカウントを作成する場合は<%= link_to 'こちら', sign_up_path %></p>
  </div>
</section>
