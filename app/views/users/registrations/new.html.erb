<section class="row sign_up">
  <div class="col-md-4 col-md-offset-1 wrapper">
    <span>Questlib</span>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'users/shared/error_messages', resource: resource %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'メールアドレス' %>
      <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'パスワード' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'パスワード再確認' %>
      <%= f.submit '登録する', class: 'submit' %>
    <% end %>

    <p>アカウントをお持ちの場合は<%= link_to 'こちら', sign_in_path %></p>
  </div>
</section>
