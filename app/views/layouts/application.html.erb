<!DOCTYPE html>
<html>
  <head>
    <title>Questlib</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{bootstrap_class_for(message_type)}") %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
